{
    "meta": {
        "name": "api-connector-splunk", 
        "apiVersion": "3.0.0", 
        "version": "1.0.0", 
        "restRoot": "api_connector_splunk", 
        "displayName": "CyberGRX"
    }, 
    "pages": {
        "configuration": {
            "title": "Configuration", 
            "tabs": [
                {
                    "name": "logging", 
                    "title": "Logging", 
                    "entity": [
                        {
                            "label": "Log level", 
                            "type": "singleSelect", 
                            "options": {
                                "disableSearch": true, 
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG", 
                                        "value": "DEBUG"
                                    }, 
                                    {
                                        "label": "INFO", 
                                        "value": "INFO"
                                    }, 
                                    {
                                        "label": "WARNING", 
                                        "value": "WARNING"
                                    }, 
                                    {
                                        "label": "ERROR", 
                                        "value": "ERROR"
                                    }, 
                                    {
                                        "label": "CRITICAL", 
                                        "value": "CRITICAL"
                                    }
                                ]
                            }, 
                            "field": "loglevel", 
                            "defaultValue": "INFO"
                        }
                    ]
                }, 
                {
                    "name": "additional_parameters", 
                    "title": "Add-on Settings", 
                    "entity": [
                        {
                            "help": "", 
                            "required": false, 
                            "label": "CyberGRX API", 
                            "type": "text", 
                            "validators": [
                                {
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "cybergrx_api", 
                            "defaultValue": "https://api.cybergrx.com"
                        }
                    ]
                }
            ], 
            "description": "Set up your add-on"
        }, 
        "inputs": {
            "title": "Inputs", 
            "services": [
                {
                    "name": "thirdparty_cybergrx", 
                    "title": "ThirdParty_CyberGRX", 
                    "entity": [
                        {
                            "help": "Enter a unique name for the data input", 
                            "required": true, 
                            "label": "Name", 
                            "type": "text", 
                            "validators": [
                                {
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex", 
                                    "pattern": "^[a-zA-Z]\\w*$"
                                }, 
                                {
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string", 
                                    "minLength": 1, 
                                    "maxLength": 100
                                }
                            ], 
                            "field": "name"
                        }, 
                        {
                            "help": "Time interval of input in seconds.", 
                            "required": true, 
                            "label": "Interval", 
                            "type": "text", 
                            "validators": [
                                {
                                    "errorMsg": "Interval must be an integer.", 
                                    "type": "regex", 
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$"
                                }
                            ], 
                            "field": "interval"
                        }, 
                        {
                            "field": "index", 
                            "required": true, 
                            "label": "Index", 
                            "type": "singleSelect", 
                            "validators": [
                                {
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string", 
                                    "minLength": 1, 
                                    "maxLength": 80
                                }
                            ], 
                            "options": {
                                "endpointUrl": "data/indexes", 
                                "createSearchChoice": true, 
                                "blackList": "^_.*$"
                            }, 
                            "defaultValue": "default"
                        }, 
                        {
                            "help": "", 
                            "options": {
                                "placeholder": "CyberGRX API Token"
                            }, 
                            "field": "api_token", 
                            "required": false, 
                            "label": "API Token", 
                            "type": "text", 
                            "validators": [
                                {
                                    "errorMsg": "Max length of password is 8192", 
                                    "type": "string", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "encrypted": true
                        }
                    ]
                }
            ], 
            "description": "Manage your data inputs", 
            "table": {
                "actions": [
                    "edit", 
                    "enable", 
                    "delete", 
                    "clone"
                ], 
                "header": [
                    {
                        "label": "Name", 
                        "field": "name"
                    }, 
                    {
                        "label": "Interval", 
                        "field": "interval"
                    }, 
                    {
                        "label": "Index", 
                        "field": "index"
                    }, 
                    {
                        "label": "Status", 
                        "field": "disabled"
                    }
                ], 
                "moreInfo": [
                    {
                        "label": "Name", 
                        "field": "name"
                    }, 
                    {
                        "label": "Interval", 
                        "field": "interval"
                    }, 
                    {
                        "label": "Index", 
                        "field": "index"
                    }, 
                    {
                        "label": "Status", 
                        "field": "disabled"
                    }, 
                    {
                        "label": "API Token", 
                        "field": "api_token"
                    }
                ]
            }
        }
    }
}